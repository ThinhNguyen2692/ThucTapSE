@using TicketDesk.Localization.Views.ProjectSettings
@using TicketDesk.Web.Client.Models
@model ProjectNew

@section title
{
    @New.Title
}
@section css{
    <style>
        select {
            width: 445px;
        }

    </style>
}
<main>
    <div class="container">
        <fieldset>
            <legend class="col-lg-8 col-lg-offset-2 col-md-9 col-md-offset-1 col-sm-12">@New.Legend</legend>
            <div class="col-lg-7 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
                @using (Html.BeginForm("New", "ProjectSettings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                 
                    <input value="0" type="hidden" name="projectViewModel.ProjectId"/>
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h2 class="panel-title">@New.Header</h2>
                        </div>
                        <div class="panel-body">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.Label(New.ProjectName, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.projectViewModel.ProjectName, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label(New.ProjectDescription, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.projectViewModel.ProjectDescription, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label(New.ReasonableTime, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.projectViewModel.ReasonableTime, new { @class = "form-control", type = "number", value = "1", min = "1" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label(New.UserProject, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.ListBoxFor(x => x.UserIds, new SelectList(Model.UserProjectViewModles, "UserId", "UserDisplayName"), new { @class = "form-select", size = "3" })

                                </div>
                            </div>
                        </div>


                        <div class="panel-footer">
                            <div class="">
                                <button type="submit" class="btn btn-success" tabindex="10">
                                    <i class="fa fa-plus"></i>&nbsp;&nbsp;@New.SaveOption
                                </button>&nbsp;&nbsp;
                                @Html.ActionLink(New.BackOption, "Index")

                            </div>
                        </div>
                    </div>
                }
            </div>
        </fieldset>
    </div>
</main>